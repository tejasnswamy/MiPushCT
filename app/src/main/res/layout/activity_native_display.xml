<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".NativeDisplayActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/native_display_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="4"
            android:padding="5dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/native_display_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:text="Android Native Display Title"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/native_display_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/native_display_title"
                    android:text="Android Native Display Message"
                    android:textSize="17sp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/native_display_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/ct_icon"
                android:textSize="17sp" />



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>